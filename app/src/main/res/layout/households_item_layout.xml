<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen_10dp"
    android:paddingBottom="@dimen/dimen_10dp"
    android:paddingStart="@dimen/dimen_18dp"
    android:paddingEnd="@dimen/dimen_18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivHouseHoldPic"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_profile_dummy"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHouseholdName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textAlignment="center"
        android:text="Aby Thomas"
        android:textSize="@dimen/dimen_14sp"
        android:textStyle="bold"
        android:textColor="@color/textColorBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHouseHoldPic"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHouseholdRelation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:textAlignment="center"
        android:text="Wife"
        android:textSize="@dimen/dimen_11sp"
        android:textStyle="normal"
        android:textColor="@color/colorDiv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHouseholdName"/>
</androidx.constraintlayout.widget.ConstraintLayout>